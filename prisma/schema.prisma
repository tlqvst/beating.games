// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @default(autoincrement()) @id
  email String @unique
  name String?
  username String @unique
  password String
  games Game[]
  userSettings UserSettings?
  roles RolesOnUser[]
}

model UserSettings {
  id Int @default(autoincrement()) @id
  user  User @relation(fields: [userId], references: [id])
  userId Int @unique
  background String? @db.VarChar(250)
  avatar String? @db.VarChar(250)
}

model Role {
  id Int @default(autoincrement()) @id
  displayName String @unique
  name String @unique
  users RolesOnUser[]
}

model RolesOnUser {
  user User @relation(fields: [userId], references: [id])
  userId Int
  role Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId])
}

model Game {
  id  Int @default(autoincrement()) @id
  addedOn DateTime @db.Date @default(now())
  date DateTime?
  title String @db.VarChar(80)
  system String @db.VarChar(80)
  background String? @db.VarChar(200)
  playtime Int?
  status String @db.VarChar(40) @default("In Progress")
  content String @db.VarChar(1000)
  owned Boolean
  achievementsLink String? @db.VarChar(200)
  perfectGame Boolean
  user  User @relation(fields: [userId], references: [id])
  userId  Int
}